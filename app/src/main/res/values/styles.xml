<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/tab_bg</item>
        <item name="tabIndicatorColor">@color/tab_select</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/tab_select</item>

    </style>


    <style name="MyTablayoutstyleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/tab_txt_color</item>
    </style>


    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <!--分享的popwindow弹出动画-->
    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/share_pop_in</item>
        <item name="android:windowExitAnimation">@anim/share_pop_out</item>
    </style>


    <style name="roomRatingBar_1" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratting_bg</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>


</resources>
