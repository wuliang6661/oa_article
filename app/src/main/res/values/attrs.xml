<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--corner_color 边角颜色，
        scanner_color 扫描线颜色
        possible_result_color 扫描点颜色
        frame_color 扫描框边线颜色
        mask_color 模糊区域颜色
        label_text  框上方提示
    -->
    <declare-styleable name="ViewfinderView">
        <attr name="corner_color" format="color" />
        <attr name="laser_color" format="color" />
        <attr name="frame_color" format="color" />
        <attr name="mask_color" format="color" />
        <attr name="result_point_color" format="color" />
        <attr name="result_color" format="color" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text" format="string" />
        <attr name="label_text_size" format="float" />
    </declare-styleable>


    <!--edit_type  0为字符串输入  1为数字输入-->
    <!--edit_fitter true为只能输入字母数字符号-->
    <declare-styleable name="EditMsgText">
        <attr name="title_text" format="string" />
        <attr name="hint_text" format="string" />
        <attr name="edit_text" format="string" />
        <attr name="edit_max_length" format="integer" />
        <attr name="edit_type" format="integer" />
        <attr name="edit_zhongdian" format="boolean" />
        <attr name="edit_fitter" format="boolean" />
    </declare-styleable>


    <declare-styleable name="WheelView">
        <attr name="itemVisibleNum" format="integer" />

        <attr name="textColorOuter" format="color" />
        <attr name="textSizeOuter" format="dimension" />
        <attr name="textColorCenter" format="color" />
        <attr name="textSizeCenter" format="dimension" />

        <attr name="lineColor" format="color" />

        <attr name="isLoop" format="boolean" />
        <attr name="lineSpaceingDimens" format="dimension" />

        <attr name="wheelGravity" format="enum">
            <enum name="left" value="234" />
            <enum name="center" value="354" />
            <enum name="right" value="894" />
        </attr>

    </declare-styleable>
</resources>
