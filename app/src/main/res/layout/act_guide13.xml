<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guide13_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/guide13_msg" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/guide13_hint" />

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:src="@drawable/guide_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="上一页"
            android:textColor="#2760C3"
            android:textSize="17sp" />

    </LinearLayout>


    <Button
        android:id="@+id/tv_finish"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_stop_slpash"
        android:text="结束引导"
        android:textColor="#E2E2E2"
        android:textSize="16sp" />

</LinearLayout>