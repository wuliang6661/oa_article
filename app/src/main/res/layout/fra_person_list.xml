<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/select_layout"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginLeft="18dp"
            android:layout_weight="1"
            android:background="@drawable/select_edit_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/select_img" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="搜索"
                android:textColor="#8D8C91"
                android:textSize="13sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/add_img"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/add_circle" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#1a1a1a"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/neibu_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:text="内部联系人"
            android:textColor="@color/f_white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/out_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="10dp"
            android:text="外部联系人"
            android:textColor="@color/f_white"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/line"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@color/blue_color" />


    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expand_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/layout_bg"
        android:dividerHeight="1dp"
        android:groupIndicator="@null" />


</LinearLayout>