<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#383838" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#1F1F20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/bar_order_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单名称"
                android:textColor="#A9A6A6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bar_order_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="订单编号"
                android:textColor="#8D8C91"
                android:textSize="9sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/bar_order_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务名称"
                android:textColor="#A9A6A6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bar_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="状态"
                android:textColor="#8D8C91"
                android:textSize="9sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/person_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/bar_order_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行人"
                android:textColor="#A9A6A6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bar_person_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="#8D8C91"
                android:textSize="9sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/shengyu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间"
                android:textColor="#A9A6A6"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/renwu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="任务时间"
                android:textColor="#8D8C91"
                android:textSize="9sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#383838" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>