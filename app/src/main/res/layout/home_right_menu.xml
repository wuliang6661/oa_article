<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="236dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#1D1D1D"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="创建日期"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/create_time_start"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_item_bg"
            android:gravity="center"
            android:text="从"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#aaaaaa" />


        <TextView
            android:id="@+id/create_time_end"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_item_bg"
            android:gravity="center"
            android:text="到"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="截止日期"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/stop_time_start"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_item_bg"
            android:gravity="center"
            android:text="从"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />

        <View
            android:layout_width="15dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#aaaaaa" />


        <TextView
            android:id="@+id/stop_time_end"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_item_bg"
            android:gravity="center"
            android:text="到"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="任务状态"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <RadioGroup
        android:id="@+id/radio_group_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/task_unfinish"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="未接受"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/task_way"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/task_off"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="完成状态"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="已逾期"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


        <RadioButton
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="今日到期"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="关键字"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/menu_item_bg"
        android:gravity="center"
        android:hint="请输入关键字"
        android:minWidth="111dp"
        android:orientation="horizontal"
        android:textColor="@color/f_white"
        android:textColorHint="@color/tab_txt_color"
        android:textSize="10sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="常用搜索"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="已逾期"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


        <RadioButton
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="今日到期"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />


        <RadioButton
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/menu_radia_button"
            android:button="@null"
            android:gravity="center"
            android:text="今日到期"
            android:textColor="@color/tab_txt_color"
            android:textSize="10sp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:paddingBottom="30dp">


        <TextView
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:background="@drawable/menu_button_left"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:background="@color/f_white" />


        <TextView
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:background="@drawable/menu_button_right"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>

