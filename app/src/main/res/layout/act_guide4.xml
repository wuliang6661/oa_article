<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/guide4_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="210dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/next1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/splash_add1" />

            <ImageView
                android:id="@+id/next2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/splash_add2" />

            <ImageView
                android:id="@+id/next3"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/splash_add3" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/hint1"
                android:layout_width="139dp"
                android:layout_height="77dp"
                android:src="@drawable/guide4_hint" />


            <ImageView
                android:id="@+id/hint2"
                android:layout_width="139dp"
                android:layout_height="77dp"
                android:layout_centerInParent="true"
                android:src="@drawable/guide4_hint"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/hint3"
                android:layout_width="139dp"
                android:layout_height="77dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/guide4_hint"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="45dp"
                android:src="@drawable/guide_back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="上一页"
                android:textColor="#2760C3"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/close"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/splash_close" />
</RelativeLayout>