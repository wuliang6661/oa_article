<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/point_blue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="人力资源"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.article.oa_article.widget.EditMsgText
            android:id="@+id/complan_guanli_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:edit_max_length="9"
            app:edit_type="1"
            app:hint_text="请输入管理人员数"
            app:title_text="管理人员" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="名"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_default_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <com.article.oa_article.widget.EditMsgText
            android:id="@+id/complan_jishu_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:edit_max_length="9"
            app:edit_type="1"
            app:hint_text="请输入技术人员数"
            app:title_text="技术人员" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="名"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_default_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.article.oa_article.widget.EditMsgText
            android:id="@+id/complan_pugong_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:edit_max_length="9"
            app:edit_type="1"
            app:hint_text="请输入普工人员数"
            app:title_text="普工人员" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="名"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_default_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/point_blue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="设备资源"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shebei_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp" />


    <LinearLayout
        android:id="@+id/add_pinglei"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/add_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="继续添加"
            android:textColor="@color/blue_color"
            android:textSize="15sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">


        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/point_blue" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="厂房资源"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <com.article.oa_article.widget.EditMsgText
            android:id="@+id/complan_changfang_mianji"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            app:edit_max_length="9"
            app:edit_type="1"
            app:hint_text="请输入厂房面积"
            app:title_text="厂房面积" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="平方米"
            android:textColor="@color/hint_color"
            android:textSize="13sp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_default_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="厂房性质"
            android:textColor="@color/white"
            android:textSize="13sp" />


        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="#939495" />

        <RelativeLayout
            android:id="@+id/select_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">


            <TextView
                android:id="@+id/person_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择厂房性质"
                android:textColor="@color/white"
                android:textColorHint="@color/hint_color"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next_right" />
        </RelativeLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_default_color" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="40dp"
        android:gravity="center_vertical"
        android:text="上传图片"
        android:textColor="@color/f_white"
        android:textSize="13sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_recycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_bg"
        android:text="保存"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:visibility="gone" />


</LinearLayout>