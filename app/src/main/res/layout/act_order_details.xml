<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <include layout="@layout/layout_order_details" />


            <LinearLayout
                android:id="@+id/shangji_task_bar"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:background="@color/bar_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/shangji_task" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="上级任务信息"
                    android:textColor="#b8b8b8"
                    android:textSize="15sp" />


                <CheckBox
                    android:id="@+id/shangji_task_check"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bar_check_box"
                    android:button="@null"
                    android:enabled="false" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/shangji_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="任务名称"
                        android:textColor="@color/hint_color"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/task_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="#F3F1F1"
                        android:textSize="15sp"
                        tools:text="这个单子很重要哦！" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#2b2b2b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="任务时限"
                        android:textColor="@color/hint_color"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/task_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="#F3F1F1"
                        android:textSize="15sp"
                        tools:text="这个单子很重要哦！" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#2b2b2b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="分派人"
                        android:textColor="@color/hint_color"
                        android:textSize="15sp" />


                    <TextView
                        android:id="@+id/task_person_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:textColor="#F3F1F1"
                        android:textSize="15sp"
                        tools:text="这个单子很重要哦！" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/task_bar"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="2dp"
                android:background="@color/bar_color"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/task_fenpai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="任务分派"
                    android:textColor="#b8b8b8"
                    android:textSize="15sp" />


                <CheckBox
                    android:id="@+id/task_check"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bar_check_box"
                    android:button="@null"
                    android:enabled="false" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/task_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="1dp"
                    android:background="#1F1F20"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="17dp">

                        <TextView
                            android:id="@+id/bar_order_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="任务名称"
                            android:textColor="@color/f_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/bar_order_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="执行人"
                            android:textColor="#8D8C91"
                            android:textSize="9sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="16dp">

                        <TextView
                            android:id="@+id/bar_order_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实际数量"
                            android:textColor="@color/f_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/bar_order_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="计划数量/单位"
                            android:textColor="#8D8C91"
                            android:textSize="9sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="17dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/shengyu_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="剩余时间"
                            android:textColor="@color/f_white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/renwu_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="任务时限"
                            android:textColor="#8D8C91"
                            android:textSize="9sp" />


                    </LinearLayout>

                </RelativeLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/task_recycle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>